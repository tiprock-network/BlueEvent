<body>
    <div class="navigation">
        
        <nav>
            <h1>Microsoft Learn Student Community Kabarak</h1>
            <ul>
                <li>Events</li>
                <li>Home</li>
                <li>Contact Us</li>
            </ul>
        </nav>
    </div>
    <% if(user){ %>
        <% if(user.userType =="admin"){ %>
    <div class="main-container">
       <div class="event-label"><p><i class="fa fa-pencil"></i> Update Event: <%=event.title %></p></div>
       
       <form action="/events/<%=event.id%>?_method=PUT" method="POST">
        <%- include('_form_fields') %>
       </form>
    </div>
    <% }else{ %>
        <div class="main-container">
            <div class="msg red"><p><i class="fa fa-person-military-rifle"></i> I am sorry but you need to be an Administrator.</p> </div>
        </div>
        <% } %>
    <% }%>
</body>
</html>